@model haliSahaRandevu.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row justify-content-center align-items-center min-vh-75 py-5">
    <div class="col-md-6 col-lg-5">
        <div class="text-center mb-4">
            <i class="bi bi-stars fs-1 text-accent" style="color: var(--primary);"></i>
            <h2 class="fw-bold mt-2">Bize Katıl</h2>
            <p class="text-muted">Halı saha dünyasına adım at.</p>
        </div>

        <div class="card border-0 shadow-lg p-3 mx-2">
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 small rounded-3 mb-3"></div>

                    <div class="row g-2">
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FullName" class="form-control" placeholder="Ad Soyad" />
                                <label asp-for="FullName">Ad Soyad</label>
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Email">Email Adresi</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon" />
                        <label asp-for="PhoneNumber">Telefon Numarası</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-6">
                            <div class="form-floating">
                                <input asp-for="Password" class="form-control" placeholder="Şifre" />
                                <label asp-for="Password">Şifre</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" />
                                <label asp-for="ConfirmPassword">Tekrar</label>
                            </div>
                        </div>
                        <div class="col-12">
                             <span asp-validation-for="Password" class="text-danger small d-block"></span>
                             <span asp-validation-for="ConfirmPassword" class="text-danger small d-block"></span>
                        </div>
                    </div>

                    <!-- Enhanced Checkbox -->
                    <div class="p-3 mb-4 bg-light rounded-3 border">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsSahaSahibi" id="roleCheck">
                            <label class="form-check-label fw-bold user-select-none" for="roleCheck">
                                <i class="bi bi-briefcase-fill me-1 text-primary"></i> Saha Sahibi Olarak Kayıt Ol
                            </label>
                            <div class="text-muted small ps-0 mt-1">İşletmenizi yönetmek ve randevu almak için bu seçeneği işaretleyin.</div>
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold">Ücretsiz Kayıt Ol</button>
                    </div>

                    <div class="text-center">
                        <span class="text-muted small">Zaten hesabın var mı?</span>
                        <a asp-action="Login" class="text-decoration-none fw-bold small ms-1">Giriş Yap</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
