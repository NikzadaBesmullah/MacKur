@model haliSahaRandevu.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="row justify-content-center align-items-center min-vh-75 py-5">
    <div class="col-md-5 col-lg-4">
        <div class="text-center mb-4">
            <i class="bi bi-question-circle fs-1 text-primary"></i>
            <h2 class="fw-bold mt-2">Şifreni mi Unuttun?</h2>
            <p class="text-muted">E-posta adresini ve yeni şifreni girerek hesabını güncelleyebilirsin.</p>
        </div>

        <div class="card border-0 shadow-lg p-3 mx-2">
            <div class="card-body">
                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 small rounded-3 mb-3"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Email">Email Adresi</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="NewPassword" class="form-control" placeholder="Yeni Şifre" />
                        <label asp-for="NewPassword">Yeni Şifre</label>
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" />
                        <label asp-for="ConfirmPassword">Yeni Şifre Tekrar</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg py-3">Şifremi Güncelle</button>
                    </div>

                    <div class="text-center">
                        <a asp-action="Login" class="text-decoration-none fw-bold small">Giriş Sayfasına Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
