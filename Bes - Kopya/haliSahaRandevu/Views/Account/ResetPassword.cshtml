@model haliSahaRandevu.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Sıfırla";
}

<div class="row justify-content-center align-items-center min-vh-75 py-5">
    <div class="col-md-5 col-lg-4">
        <div class="text-center mb-4">
            <i class="bi bi-shield-lock fs-1 text-primary"></i>
            <h2 class="fw-bold mt-2">Yeni Şifre Belirle</h2>
            <p class="text-muted">Lütfen yeni şifreni güvenli bir şekilde belirle.</p>
        </div>

        <div class="card border-0 shadow-lg p-3 mx-2">
            <div class="card-body">
                <form asp-action="ResetPassword" method="post">
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 small rounded-3 mb-3"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Yeni Şifre" />
                        <label asp-for="Password">Yeni Şifre</label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" />
                        <label asp-for="ConfirmPassword">Yeni Şifre (Tekrar)</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg py-3">Şifreyi Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
