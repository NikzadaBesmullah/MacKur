@{
    ViewData["Title"] = "E-posta Gönderildi";
}

<div class="row justify-content-center align-items-center min-vh-75 py-5">
    <div class="col-md-5 col-lg-4">
        <div class="text-center mb-4">
            <i class="bi bi-envelope-check fs-1 text-success"></i>
            <h2 class="fw-bold mt-2">E-posta Gönderildi!</h2>
            <p class="text-muted">Lütfen e-posta kutunu kontrol et. Şifreni sıfırlamak için gerekli talimatları gönderdik.</p>
        </div>

        <div class="card border-0 shadow-lg p-3 mx-2 text-center">
            <div class="card-body">
                <p class="small text-muted mb-4">E-posta ulaşmadıysa spam klasörünü kontrol etmeyi unutma.</p>
                <div class="d-grid">
                    <a asp-action="Login" class="btn btn-outline-primary py-2">Giriş Sayfasına Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>
