@model IEnumerable<haliSahaRandevu.Models.HaliSaha>
@using haliSahaRandevu.Helpers

@{
    ViewData["Title"] = "Ana Sayfa";
    var cities = CityHelper.GetCities();
}

<!-- Hero Section -->
<div class="position-relative overflow-hidden p-5 mb-5 rounded-3 text-center" style="background: radial-gradient(circle at top right, #1e293b, #0f172a); color: white;">
    <div class="container py-5" style="z-index: 1; position: relative;">
        <h1 class="display-3 fw-bold mb-3 text-white" style="letter-spacing: -1px;">Maçını Ayarla, <span class="text-gradient" style="background: linear-gradient(to right, #39FF14, #2ecc71); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Sahaya Çık!</span></h1>
        <p class="lead mb-5 text-light opacity-75 mx-auto" style="max-width: 700px;">Türkiye'nin en seçkin halı sahalarını keşfet, anında randevu oluştur ve takımını kur.</p>
        
        <!-- Search Box -->
        <div class="glass-card p-4 mx-auto" style="max-width: 800px; background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255,255,255,0.2);">
            <form asp-controller="Home" asp-action="Index" method="get" class="row g-3 align-items-center">
                <div class="col-md-9">
                    <div class="form-floating text-dark">
                         <select name="searchCity" class="form-select border-0 shadow-sm" id="citySelect">
                            <option value="">Şehir Seçiniz...</option>
                            @foreach (var city in cities)
                            {
                                <option value="@city" selected="@(Context.Request.Query["searchCity"] == city)">@city</option>
                            }
                        </select>
                        <label for="citySelect">Hangi şehirde oynayacaksın?</label>
                    </div>
                </div>
                <div class="col-md-3 d-grid">
                    <button class="btn btn-accent btn-lg fw-bold h-100 shadow-glow" type="submit" style="min-height: 58px;">
                        <i class="bi bi-search me-2"></i> Saha Bul
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Abstract Background Shapes -->
    <div class="position-absolute top-0 end-0 p-5 mt-5 me-5 rounded-circle bg-primary opacity-25 blur-3xl" style="width: 400px; height: 400px; filter: blur(100px);"></div>
    <div class="position-absolute bottom-0 start-0 p-5 mb-5 ms-5 rounded-circle bg-success opacity-10 blur-3xl" style="width: 300px; height: 300px; filter: blur(80px);"></div>
</div>
        <h3 class="fw-bold m-0"><i class="bi bi-star-fill text-warning me-2"></i>Popüler Sahalar</h3>
        <div class="ms-auto">
            <span class="badge bg-light text-dark border">@Model.Count() Saha Listelendi</span>
        </div>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 py-5 text-center">
                <div class="glass-card p-5 d-inline-block">
                    <i class="bi bi-geo-alt display-1 text-muted mb-3 d-block"></i>
                    <h4>Aradığınız kriterlere uygun halı saha bulunamadı.</h4>
                    <p class="text-muted mb-0">Başka bir şehir seçmeyi deneyin.</p>
                </div>
            </div>
        }

        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="position-relative overflow-hidden" style="height: 240px;">
                        @if (!string.IsNullOrEmpty(item.FotoUrl))
                        {
                            <img src="@item.FotoUrl" class="w-100 h-100 object-fit-cover transition-zoom" alt="@item.Ad">
                        }
                        else
                        {
                             <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-muted">
                                 <i class="bi bi-image fs-1 opacity-25"></i>
                             </div>
                        }
                        <div class="position-absolute top-0 end-0 m-3 d-flex gap-2">
                            @if(item.OrtalamaPuan > 0)
                            {
                                <span class="badge bg-white text-dark shadow-sm py-2 px-3 d-flex align-items-center">
                                    <i class="bi bi-star-fill text-warning me-1"></i> @item.OrtalamaPuan
                                </span>
                            }
                            
                            @{
                                bool isFav = false;
                                if (ViewBag.FavoriteIds != null)
                                {
                                    var favs = (List<int>)ViewBag.FavoriteIds;
                                    isFav = favs.Contains(item.Id);
                                }
                            }
                            @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin") && !User.IsInRole("SahaSahibi"))
                            {
                                <button class="btn btn-light shadow-sm rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 38px; height: 38px;" onclick="toggleFavorite(@item.Id, this)">
                                    <i class="bi @(isFav ? "bi-heart-fill text-danger" : "bi-heart text-muted") fs-6"></i>
                                </button>
                            }
                        </div>
                        <div class="position-absolute bottom-0 start-0 m-3">
                            <span class="badge bg-dark bg-opacity-75 text-white backdrop-blur py-2 px-3">
                                <i class="bi bi-tag-fill text-accent me-1"></i> @item.SaatlikUcret TL/Saat
                            </span>
                        </div>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-2 text-truncate">@item.Ad</h5>
                        <p class="card-text text-muted small mb-3">
                            <i class="bi bi-geo-alt-fill text-danger me-1"></i> @item.Il, @item.Adres
                        </p>
                        <div class="d-grid">
                            @if (!User.IsInRole("Admin"))
                            {
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                                    Randevu Al <i class="bi bi-arrow-right ms-1"></i>
                                </a>
                            }
                            else
                            {
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                    İncele
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .transition-zoom {
        transition: transform 0.5s ease;
    }
    .card:hover .transition-zoom {
        transform: scale(1.05);
    }
    .text-accent {
        color: var(--accent) !important;
    }
    .blur-3xl {
        filter: blur(3rem);
    }
</style>

@section Scripts {
    <script>
        function toggleFavorite(id, btn) {
            // Prevent button click from triggering card link if any
            event.preventDefault(); 
            
            $.post('/Home/ToggleFavorite', { id: id, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() }, function(res) {
                if (res.success) {
                    var icon = $(btn).find('i');
                    if (res.isFavorited) {
                        icon.removeClass('bi-heart text-muted').addClass('bi-heart-fill text-danger');
                    } else {
                        icon.removeClass('bi-heart-fill text-danger').addClass('bi-heart text-muted');
                    }
                } else {
                    if(res.message === "Giriş yapmalısınız.") {
                        window.location.href = '/Account/Login';
                    } else {
                        alert(res.message);
                    }
                }
            });
        }
    </script>
}
