@model haliSahaRandevu.Models.HaliSaha
@using haliSahaRandevu.Helpers

@{
    ViewData["Title"] = "Yeni Saha Ekle";
    var cities = CityHelper.GetCities();
    var prices = new List<int> { 1000, 1100, 1200, 1300, 1400, 1500, 1750, 2000, 2500, 3000, 5000 };
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-plus-circle"></i> Yeni Saha Ekle</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <!-- Left Column: Basic Info -->
                            <div class="col-md-6 border-end">
                                <h5 class="text-muted mb-3">Temel Bilgiler</h5>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Ad" class="form-control" placeholder="Saha Adı" />
                                    <label asp-for="Ad">Saha Adı</label>
                                    <span asp-validation-for="Ad" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <select asp-for="Il" class="form-select">
                                        <option value="">Şehir Seçiniz...</option>
                                        @foreach (var city in cities)
                                        {
                                            <option value="@city">@city</option>
                                        }
                                    </select>
                                    <label asp-for="Il">Bulunduğu İl</label>
                                    <span asp-validation-for="Il" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="SaatlikUcret" class="form-select">
                                        <option value="">Fiyat Seçiniz...</option>
                                        @foreach (var price in prices)
                                        {
                                            <option value="@price">@price TL</option>
                                        }
                                    </select>
                                    <label asp-for="SaatlikUcret">Saatlik Ücret (TL)</label>
                                    <span asp-validation-for="SaatlikUcret" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Iban" class="form-control" placeholder="TR..." />
                                    <label asp-for="Iban">IBAN (TR...)</label>
                                    <span asp-validation-for="Iban" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Aciklama" class="form-label text-muted">Açıklama / Özellikler</label>
                                    <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label text-muted">Fotoğraflar</label>
                                    <input type="file" name="photos" class="form-control" accept="image/*" multiple />
                                </div>
                            </div>

                            <!-- Right Column: Location & Address -->
                            <div class="col-md-6 ps-md-4">
                                <h5 class="text-muted mb-3">Konum Bilgileri</h5>
                                
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Adres" class="form-control" rows="2" style="height: 100px" placeholder="Açık Adres"></textarea>
                                    <label asp-for="Adres">Açık Adres</label>
                                    <span asp-validation-for="Adres" class="text-danger"></span>
                                </div>

                                <div class="alert alert-info small">
                                    <i class="bi bi-geo-alt"></i> Harita üzerinden sahanızın tam konumunu işaretleyin.
                                </div>

                                <!-- Map Container -->
                                <div id="map" style="height: 300px; width: 100%; border-radius: 8px;" class="border mb-3"></div>
                                
                                <!-- Hidden Lat/Lng Inputs -->
                                <input type="hidden" asp-for="Enlem" id="Lat" />
                                <input type="hidden" asp-for="Boylam" id="Lng" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-light me-2">İptal</a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold">Kaydet ve Yayınla</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Init Map
        var map = L.map('map').setView([39.9334, 32.8597], 6); // Turkey Center

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap'
        }).addTo(map);

        var marker;

        map.on('click', function(e) {
            if (marker) {
                map.removeLayer(marker);
            }
            marker = L.marker(e.latlng).addTo(map);
            
            // Set input values
            document.getElementById('Lat').value = e.latlng.lat;
            document.getElementById('Lng').value = e.latlng.lng;

            // Reverse Geocoding (Nominatim API)
            fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${e.latlng.lat}&lon=${e.latlng.lng}&addressdetails=1`)
                .then(response => response.json())
                .then(data => {
                    if (data && data.display_name) {
                        document.getElementById('Adres').value = data.display_name;
                    }
                })
                .catch(error => console.error('Geocoding error:', error));
        });
    </script>
}
